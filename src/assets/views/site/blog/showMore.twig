{% for article in articles %}
    <div class="block">
        <div class="image">
            <a href="/blog/{{ article.alias|e }}/{{ article.id|e }}">
                <img src="/upload/images/blog/{{ article.file_alias|e }}" alt="" class="article-image"/>
            </a>
        </div>
        <div class="text">
            <div class="title">
                <a href="/blog/{{ article.alias|e }}/{{ article.id|e }}">
                    <h3>{{ article.name|e }} </h3>
                    <p>{{ article.created_at|e }}</p>
                </a>
            </div>
            <div class="description">{{ article.description|e }}</div>
            <a href="/blog/{{ article.alias|e }}/{{ article.id|e }}" class="read-more-link">Читать дальше...</a>
        </div>
    </div>
{% endfor %}

<script>
  $(document).ready(function() {
    let lastPage = {{ lastPage }};
    if (lastPage) {
      $('.show_more').hide();
    }
  });
</script>