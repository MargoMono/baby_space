{% extends "site/layout.twig" %}

{% block content %}

<section class="blog-banner-area" id="blog">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>Blog Details</h1>
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Blog Details</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="blog_area single-post-area py-80px section-margin--small">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="blog_img text-right">
                    <div class="feature-img">
                        <img class="img-fluid" src="/upload/images/blog/{{ article.file_alias|e }}" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-9 posts-list">
                <div class="single-post row">
                    <div class="col-lg-12 col-md-12 blog_details">
                        <h2>{{article.name}}</h2>
                        {{ article.description|raw }}
                    </div>
                </div>

            </div>
            <div class="col-lg-12">
                <div class="navigation-area">
                    <div class="row">

                        <div class="col-lg-6 col-md-6 col-12 nav-left flex-row d-flex justify-content-start align-items-center">
                            {% if previous %}
                            <div class="thumb">
                                <a href="/blog/{{ previous.alias }}/{{ previous.id }}">
                                    <img class="img-fluid blog_img_small" src="/upload/images/blog/{{ previous.file_alias|e }}" alt="">
                                </a>
                            </div>
                            <div class="arrow">
                                <a href="/blog/{{ previous.alias }}/{{ previous.id }}">
                                    <span class="lnr text-white lnr-arrow-left"></span>
                                </a>
                            </div>
                            <div class="detials">
                                <p> Предыдущий пост</p>
                                <a href="/blog/{{ previous.alias }}/{{ previous.id }}">
                                    <h4> {{ previous.name }}</h4>
                                </a>
                            </div>
                            {% endif %}
                        </div>

                        {% if next %}
                        <div class="col-lg-6 col-md-6 col-12 nav-right flex-row d-flex justify-content-end align-items-center">
                            <div class="detials">
                                <p>Следующий пост</p>
                                <a href="/blog/{{ next.alias }}/{{ next.id }}">
                                    <h4>{{ next.name }}</h4>
                                </a>
                            </div>
                            <div class="arrow">
                                <a href="/blog/{{ next.alias }}/{{ next.id }}">
                                    <span class="lnr text-white lnr-arrow-right"></span>
                                </a>
                            </div>
                            <div class="thumb">
                                <a href="/blog/{{ next.alias }}/{{ next.id }}">
                                    <img class="img-fluid blog_img_small" src="/upload/images/blog/{{ next.file_alias|e }}" alt="">
                                </a>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="subscribe-position">
    <div class="container">
        <div class="subscribe text-center">
            <h3 class="subscribe__title">{{ content.subscribe_title }}</h3>
            <p>{{ content.subscribe_description }}</p>
            <div id="mc_embed_signup">
                <form target="_blank" action="" method="get" class="subscribe-form form-inline mt-5 pt-1">
                    <div class="form-group ml-sm-auto">
                        <input class="form-control mb-1" type="email" name="email" placeholder="{{ content.your_email }}">
                        <div class="info"></div>
                    </div>
                    <button class="button button-subscribe mr-auto mb-1" type="submit">{{ content.subscribe_now }}</button>
                    <div style="position: absolute; left: -5000px;">
                        <input name="" tabindex="-1" value="" type="text">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

{% endblock %}