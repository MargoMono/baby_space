{% extends "site/layout.twig" %}

{% block content %}
    <section class="blog-banner-area" id="blog">
        <div class="container h-100">
            <div class="blog-banner">
                <div class="text-center">
                    <h1>Новости</h1>
                    <nav aria-label="breadcrumb" class="banner-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Главная</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Новости</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <section class="blog_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog_left_sidebar">
                        {% for new in newList %}
                            <new class="row new_item">
                                <div class="col-md-3">
                                    <div class="blog_img text-right">
                                        <img src="/upload/images/new/{{ new.file_alias|e }}" alt="" class="new-image"/>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="blog_post">
                                        <div class="blog_details">
                                            <h2>{{ new.name }}</h2>
                                            <p><b>{{ new.created_at }}</b></p>
                                            <p>{{ new.description }}</p>
                                        </div>
                                    </div>
                                </div>
                            </new>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="justify-content-center d-flex">
            <a href="#" class="button show-more">Показать ещё</a>
        </div>
    </section>

    {% include 'site/includes/subscribe.twig' %}
    
{% endblock %}

{% block scripts %}

    <script>
        $(document).ready(function() {
            checkIfLastPage();
        });

        $('.show-more').click(function(e) {
            e.preventDefault();
            let count = $('.new_item').length;
            $.ajax({
                url: '/new/show-more/' + count,
                type: 'GET',
                success: function(res) {
                    $('.blog_left_sidebar').append(res);
                    checkIfLastPage()
                },
                error: function() {
                },
            });
        });

        function checkIfLastPage() {
            let count = $('.new_item').length;
            $.ajax({
                url: '/new/last-page/' + count,
                type: 'GET',
                success: function(res) {
                    console.log(res)
                    let response = JSON.parse(res);
                    if (response) {
                        $('.show-more').hide();
                    }
                },
                error: function() {
                },
            });
        }
    </script>

{% endblock %}
