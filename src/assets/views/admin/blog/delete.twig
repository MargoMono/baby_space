{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <a href="/admin/blog" data-toggle="tooltip" title="Отменить" class="btn btn-default"><i class="fa fa-reply"></i></a>
        </div>
        <h1>
            Панель администратора
            <small>Удаление статьи</small>
        </h1>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="col-lg-12 correct">
                <div class="login-form">
                    <h4>Удалить язык "{{ blog.name }}"</h4>

                    <p>Вы действительно хотите удалить эту статью?</p>

                    <form action="/admin/blog/delete" method="post">
                        <input type="hidden" name="id" value="{{ blog.id }}">
                        <input type="submit" name="submit" class="btn btn-default" value="Удалить"/>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>


{% include 'admin/includes/footer.twig' %}