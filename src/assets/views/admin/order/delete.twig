    <section class="content-header">
        <h1>
            Панель администратора
            <small>Удаление заказа</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin/order/">заказ</a></li>
            <li class="active">Удаление заказа</li>
        </ol>
    </section>

    <section class="content">
        <div class="col-lg-12 correct">
