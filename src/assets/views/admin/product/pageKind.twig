{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">

    <section class="content-header">
        <h1>
            Панель администратора
            <small>Удаление продукта</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">Удаление продукта</li>
        </ol>
    </section>

    <section class="content">
        {% if errors is not empty %}
            <div class="col-lg-12 mistake">
                <p>Ошибка:</p>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="col-lg-12 correct">
            <div class="login-form">
                <h4>Вид страницы продукта</h4>

                <p>Выберите вид страницы продукта</p>
                <form action="#" method="post">
                    <input type="radio" name="kind"
                            value="1" {% if enableProductPageKind.name == 'coating' %} checked {% endif %}/>Продукт с
                    плёнками<br>
                    <input type="radio" name="kind"
                           value="2" {% if enableProductPageKind.name == 'design' %} checked {% endif %} />Продукт с
                    дизайнами <br>
                    <input type="submit" name="submit" class="btn btn-default" value="Изменить"/>
                </form>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>

{% include 'admin/includes/footer.twig' %}