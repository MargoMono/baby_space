{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Продукты</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">Продукты</li>
        </ol>
    </section>

    <section class="content">
        <a href="/admin/product/create" class="btn btn-default back"><i class="fa fa-plus"></i> Добавить продукт</a>

        <h4>Список продуктов</h4>

        <table class="table-bordered table-striped table">
            <tr>
                <th>Номер
                    <form action="/admin/product" method="post">
                        <input type="hidden" name="order" value="id">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Название
                    <form action="/admin/product" method="post">
                        <input type="hidden" name="order" value="name">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Категория
                    <form action="/admin/product" method="post">
                        <input type="hidden" name="order" value="category_name">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Очередность</th>
                <th>Статус
                    <form action="/admin/product" method="post">
                        <input type="hidden" name="order" value="position">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th></th>
                <th></th>
            </tr>
            {% for product in productList %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.category_name }}</td>
                    <td>{{ product.position }}</td>
                    <td> {% if product.enabled == 0 %} Скрыта {% else %} Отображается {% endif %}</td>
                    <td><a href="/admin/product/update/{{ product.id }}" title="Редактировать"><i
                                    class="fa fa-pencil-square-o"></i></a></td>
                    <td><a href="/admin/product/delete/{{ product.id }}" title="Удалить"><i
                                    class="fa fa-times"></i></a></td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

