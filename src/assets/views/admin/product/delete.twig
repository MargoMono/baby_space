{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">

    <section class="content-header">
        <h1>
            Панель администратора
            <small>Удаление товара</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin/product/">Товар</a></li>
            <li class="active">Удаление товара</li>
        </ol>
    </section>

    <section class="content">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="col-lg-12 correct">
            <div class="login-form">
                <h4>Удалить товар "{{ product.name }}"</h4>

                <p>Вы действительно хотите удалить этот товар?</p>

                <form action="/admin/product/delete" method="post">
                    <input type="hidden" name="id" value="{{ product.id }}">
                    <input type="submit" name="submit" class="btn btn-default" value="Удалить"/>
                </form>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>

{% include 'admin/includes/footer.twig' %}