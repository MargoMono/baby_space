{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Добавить коллекцию пленок</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin/coating/">Коллекции пленок</a></li>
            <li class="active">Добавить коллекцию пленок</li>
        </ol>
    </section>

    <section class="content">
        {% if errors is not empty %}
            <div class="col-lg-12 mistake">
                <p>Ошибка:</p>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="col-lg-12 correct">
            <div class="login-form">
                <form action="#" enctype="multipart/form-data" method="post">

                    <p class="title-name">Название коллекции</p>
                    <p class="required">*обязательное поле</p>
                    <input type="text" name="name" placeholder="" value="" required>

                    <p class="title-name">Краткое описание</p>
                    <p class="required">*обязательное поле</p>
                    <textarea name="description" rows="4" cols="150" required></textarea>

                    <p class="title-name">Изображения пленок</p>
                    <p class="required">*обязательное поле</p>
                    <input type='file' name='file[]' multiple required>

                    <input type="submit" name="button" class="btn btn-default" value="Сохранить"/>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}
