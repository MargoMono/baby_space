{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Обновить фотографию</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin/portfolio/">Портфолио</a></li>
            <li class="active">Обновить фотографию</li>
        </ol>
    </section>

    <section class="content">
        {% if errors is not empty %}
            <div class="col-lg-12 mistake">
                <p>Ошибка:</p>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="col-lg-12 correct">
            <div class="login-form">
                <form action="/admin/portfolio/update/{{ photo.id }}" enctype="multipart/form-data" method="post">

                    <input type="hidden" name="id" placeholder="" value="{{ photo.id }}">

                    <p class="title-name">Название</p>
                    <input type="text" name="name" placeholder="" value="{{ photo.name }}" required>
                    <p class="required">*обязательное поле</p>

                    <input type="hidden" name="file_id" placeholder="" value="{{ photo.file_id }}">
                    <input type="hidden" name="file_alias" placeholder="" value="{{ photo.file_alias }}">

                    <p class="title-name">Изображение</p>
                    <img src="/upload/images/portfolio/{{ photo.file_alias }}" width="150" alt=""/>
                    <input type="file" name="file" value="">

                    <br><br>
                    <input type="submit" name="button" class="btn btn-default" value="Обновить"/>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

