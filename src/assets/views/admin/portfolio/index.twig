{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Потрфолио</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">Потрфолио</li>
        </ol>
    </section>

    <section class="content">
        <a href="/admin/portfolio/create" class="btn btn-default back"><i class="fa fa-plus"></i> Добавить фотографию</a>

        <h4>Список фотографий</h4>

        <table class="table-bordered table-striped table">
            <tr>
                <th>Номер
                    <form action="/admin/portfolio" method="post">
                        <input type="hidden" name="order" value="id">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Название Фотографии
                    <form action="/admin/portfolio" method="post">
                        <input type="hidden" name="order" value="name">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Изображение</th>
                <th>Дата публикации
                    <form action="/admin/portfolio" method="post">
                        <input type="hidden" name="order" value="created_at">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th></th>
                <th></th>
            </tr>
            {% for portfolio in portfolioList %}
                <tr>
                    <td>{{ portfolio.id }}</td>
                    <td>{{ portfolio.name }}</td>
                    <td><img src="/upload/images/portfolio/{{ portfolio.file_alias }}" width="150" alt=""/></td>
                    <td>{{ portfolio.created_at }}</td>
                    <td><a href="/admin/portfolio/update/{{ portfolio.id }}" title="Редактировать"><i
                                    class="fa fa-pencil-square-o"></i></a></td>
                    <td><a href="/admin/portfolio/delete/{{ portfolio.id }}" title="Удалить"><i
                                    class="fa fa-times"></i></a></td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

