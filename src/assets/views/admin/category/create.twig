{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-option" data-toggle="tooltip" title="Сохранить" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="/admin/category" data-toggle="tooltip" title="Вернуться" class="btn btn-stile"><i class="fa fa-reply"></i></a>
        </div>
        <h1>Категории</h1>
    </section>
    <section class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Добавить категорию</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-option" class="form-horizontal">
                    <fieldset>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-name">Название</label>
                            <div class="col-sm-10">
                                <input type="text" required name="name" placeholder="Название" id="input-name" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-description">Описание</label>
                            <div class="col-sm-10">
                                <input type="text" required name="description"  placeholder="Описание" id="input-description" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-file">Изображение</label>
                            <div class="col-sm-10">
                                <input type="file" required name="file" id="input-file" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">Статус</label>
                            <div class="col-sm-10">
                                <select name="status" id="input-status" class="form-control">
                                    <option value="1">Отображается</option>
                                    <option value="0">Скрыта</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-meta_title">Мета-тег title (для SEO)</label>
                            <div class="col-sm-10">
                                <input type="text" name="meta_title"  placeholder="Мета-тег title (для SEO)" id="input-meta_title" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-meta_description">Мета-тег description (для SEO)</label>
                            <div class="col-sm-10">
                                <input type="text" name="meta_description"  placeholder="Мета-тег description (для SEO))" id="input-meta_description" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-meta_keyword">Мета-теги keywords (для SEO)</label>
                            <div class="col-sm-10">
                                <input type="text" name="meta_keyword"  placeholder="Мета-теги keywords (для SEO)" id="input-meta_keyword" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-tag">Теги (через запятую)</label>
                            <div class="col-sm-10">
                                <input type="text" name="tag"  placeholder="Теги (через запятую)" id="input-tag" class="form-control" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}
