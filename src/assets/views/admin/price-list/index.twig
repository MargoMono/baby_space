{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Прайс-лист</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">Прайс-лист</li>
        </ol>
    </section>

    <section class="content">
        <a href="/admin/price-list/create" class="btn btn-default back"><i class="fa fa-plus"></i> Добавить
            прайс-лист</a>

        <h4>Список статей</h4>

        <table class="table-bordered table-striped table">
            <tr>
                <th>Номер
                    <form action="/admin/price-list" method="post">
                        <input type="hidden" name="order" value="id">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Название прайс-листа
                    <form action="/admin/price-list" method="post">
                        <input type="hidden" name="order" value="name">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Прайс-лист</th>
                <th></th>
                <th></th>
            </tr>
            {% for price in priceList %}
                <tr>
                    <td>{{ price.id }}</td>
                    <td>{{ price.name }}</td>
                    <td><a href="/upload/images/price-list/{{ price.file_alias }}" target="_blank">Просмотреть</a></td>
                    <td><a href="/admin/price-list/update/{{ price.id }}" title="Редактировать"><i
                                    class="fa fa-pencil-square-o"></i></a></td>
                    <td><a href="/admin/price-list/delete/{{ price.id }}" title="Удалить"><i
                                    class="fa fa-times"></i></a></td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

