{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Страницы</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">Страницы</li>
        </ol>
    </section>

    <section class="content">

        <h4>Список статей</h4>

        <table class="table-bordered table-striped table">
            <tr>
                <th>Номер
                    <form action="/admin/page" method="post">
                        <input type="hidden" name="order" value="id">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th>Название
                    <form action="/admin/page" method="post">
                        <input type="hidden" name="order" value="name">
                        <input type="submit" class="btn btn-filter" value="&darr;">
                    </form>
                </th>
                <th></th>
            </tr>
            {% for page in pageList %}
                <tr>
                    <td>{{ page.id }}</td>
                    <td>{{ page.name }}</td>
                    <td><a href="/admin/page/update/{{ page.id }}" title="Редактировать"><i
                                    class="fa fa-pencil-square-o"></i></a></td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

