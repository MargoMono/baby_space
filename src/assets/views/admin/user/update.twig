{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Обновить пользователя</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin/user/">Пользователи</a></li>
            <li class="active">Обновить пользователя</li>
        </ol>
    </section>

    <section class="content">
        {% if errors is not empty %}
            <div class="col-lg-12 mistake">
                <p>Ошибка:</p>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="col-lg-12 correct">
            <div class="login-form">
                <form action="/admin/user/update/{{ user.id }}" enctype="multipart/form-data" method="post">

                    <input type="hidden" name="id" placeholder="" value="{{ user.id }}">

                    <p class="title-name">Имя пользователя</p>
                    <input type="text" name="name" placeholder="" value="{{ user.name }}" required minlength="3"
                           maxlength="20">
                    <p class="required">*обязательное поле</p>

                    <p class="title-name">Почта пользователя</p>
                    <input type="email" name="email" placeholder="" value="{{ user.email }}" required>
                    <p class="required">*обязательное поле</p>

                    <p class="title-name">Роль пользователя</p>
                    <select name="role_id">
                        {% for role in roleList %}
                            <option value="{{ role.id }}" {% if role.selected == true %} selected {% endif %}>{{ role.name }}</option>
                        {% endfor %}
                    </select>

                    <br><br>
                    <input type="submit" name="button" class="btn btn-stile" value="Обновить"/>
                </form>
            </div>
        </div>
    </section>
</div>

