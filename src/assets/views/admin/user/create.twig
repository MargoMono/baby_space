{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-user" data-toggle="tooltip" title="Сохранить" class="btn btn-primary">
                <i class="fa fa-save"></i>
            </button>
            <a href="/admin/user" data-toggle="tooltip" title="Вернуться" class="btn btn-stile">
                <i class="fa fa-reply"></i>
            </a>
        </div>
        <h1>Пользователи</h1>
    </section>
    <section class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i>Добавить пользователя
                </h3>
            </div>
            <div class="panel-body">
                <form action="" method="post" enctype="multipart/form-data" id="form-user" class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-name">Имя</label>
                            <div class="col-sm-10">
                                <input type="text" minlength="1" maxlength="255" name="name" placeholder="Имя"
                                       id="input-name" class="form-control"/>
                                <p class="prompt">от 1 до 255 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-email">Почта</label>
                            <div class="col-sm-10">
                                <input type="email" minlength="1" maxlength="255" name="email" placeholder="Почта"
                                       id="input-email" class="form-control"/>
                                <p class="prompt">от 1 до 255 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-role">Роль</label>
                            <div class="col-sm-10">
                                <select name="role_id" id="input-role" class="form-control">
                                    {% for role in roleList %}
                                        <option value="{{ role.id }}">{{ role.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-password">Пароль</label>
                            <div class="col-sm-10">
                                <input type="password" minlength="6" maxlength="32" name="password" placeholder="Пароль"
                                       id="input-password" class="form-control"/>
                                <p class="prompt">от 1 до 32 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-password_confirm">Подтверждение
                                парол</label>
                            <div class="col-sm-10">
                                <input type="password" minlength="6" maxlength="32" name="password_confirm"
                                       placeholder="Подтверждение пароля" id="input-password_confirm" class="form-control"/>
                                <p class="prompt">от 1 до 32 символов</p>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

<script>
    $(document).ready(function () {

        $('#form-user').on('submit', function (e) {
            if (!$('#input-name').val()) {
                validAlert(e);
                return;
            }
            if (!$('#input-email').val()) {
                validAlert(e);
                return;
            }

            if (!$('#input-password').val()) {
                validAlert(e);
                return;
            }

            if (!$('#input-password_confirm').val()) {
                validAlert(e);
            }
        });

        const content = '<div class="alert alert-danger alert-dismissible">\n' +
            '            <i class="fa fa-exclamation-circle "></i> Заполните все необходимые поля, отмеченные звездочкой\n' +
            '            <button type="button" class="close" data-dismiss="alert">&times;</button>\n' +
            '        </div>';

        function validAlert(e) {
            e.preventDefault();
            $('.alert').remove();
            $('.content').prepend(content);
        }
    });
</script>
