{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-option" data-toggle="tooltip" title="Сохранить" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="/admin/country" data-toggle="tooltip" title="Отменить" class="btn btn-stile"><i class="fa fa-reply"></i></a>
        </div>
        <h1>Страны</h1>
    </section>
    <section class="content">
        <div class="panel panel-default">
            {% if error_warning %}
                <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            {% if success %}
                <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Обновить страну</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-option" class="form-horizontal">
                    <fieldset>
                        <input type="hidden" name="id" placeholder="" value="{{ country.id }}">
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-name">Название</label>
                            <div class="col-sm-10">
                                <input type="text" required name="name" value="{{ country.name }}" placeholder="Название" id="input-name" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-iso_code_2">Код ISO 2</label>
                            <div class="col-sm-10">
                                <input type="text" required name="iso_code_2" value="{{ country.iso_code_2 }}" placeholder="Код ISO 2" id="input-iso_code_2" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-iso_code_3">Код ISO 3</label>
                            <div class="col-sm-10">
                                <input type="text" required name="iso_code_3" value="{{ country.iso_code_3 }}"  placeholder="Код ISO 3" id="input-iso_code_3" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-status">Статус</label>
                            <div class="col-sm-10">
                                <select name="status" id="input-status" class="form-control">
                                    <option value="1">Отображается</option>
                                    <option value="0">Скрыта</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-file">Изображение (рекомендуется загрузить с сайта по
                                <a href="https://icon-icons.com/ru/pack/Flat-Europe-Flag-Icons/266">ссылке</a>)
                            </label>
                            <div class="col-sm-10">
                                <img src="/upload/images/country/{{ country.file_alias }}" width="150" alt=""/>
                                <input type="hidden" name="file_id" placeholder="" value="{{ country.file_id }}">
                                <input type="hidden" name="file_alias" placeholder="" value="{{ country.file_alias }}">
                                <input type="file" name="file" placeholder="Название файла страны" id="input-file" class="form-control" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}
