{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-country" data-toggle="tooltip" title="Сохранить" class="btn btn-primary">
                <i class="fa fa-save"></i>
            </button>
            <a href="/admin/country" data-toggle="tooltip" title="Вернуться" class="btn btn-stile">
                <i class="fa fa-reply"></i>
            </a>
        </div>
        <h1>Страны</h1>
    </section>
    <section class="content">
        <div class="panel panel-default">
            {% if error_warning %}
                <div class="alert alert-danger alert-dismissible">
                    <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            {% if success %}
                <div class="alert alert-success alert-dismissible">
                    <i class="fa fa-check-circle"></i> {{ success }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Обновить страну</h3>
            </div>
            <div class="panel-body">
                <form action="" method="post" enctype="multipart/form-data" id="form-country" class="form-horizontal">
                    <fieldset>
                        <input type="hidden" name="id" placeholder="" value="{{ country.id }}">
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-name">Название</label>
                            <div class="col-sm-10">
                                <input type="text" minlength="1" maxlength="128" name="name" value="{{ country.name }}"
                                       placeholder="Название" id="input-name" class="form-control"/>
                                <p class="prompt">от 1 до 128 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-alpha2">Код alpha 2</label>
                            <div class="col-sm-10">
                                <input type="text" minlength="1" maxlength="2" name="alpha2"
                                       value="{{ country.alpha2 }}" placeholder="Код alpha 2" id="input-alpha2"
                                       class="form-control"/>
                                <p class="prompt">от 1 до 2 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-alpha3">Код alpha 3</label>
                            <div class="col-sm-10">
                                <input type="text" minlength="1" maxlength="3" name="alpha3"
                                       value="{{ country.alpha3 }}" placeholder="Код alpha 3" id="input-alpha3"
                                       class="form-control"/>
                                <p class="prompt">от 1 до 3 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-currency_id">Валюта по умолчанию</label>
                            <div class="col-sm-10">
                                <select name="currency_id" id="input-currency_id" class="form-control">
                                    {% for currency in currencyList %}
                                        <option {% if currency.id == country.currency_id %} selected {% endif %}
                                                value="{{ currency.id }}">{{ currency.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">Статус</label>
                            <div class="col-sm-10">
                                <select name="status" id="input-status" class="form-control">
                                    <option value="1" {% if country.status == 1 %} selected {% endif %}>Отображается
                                    </option>
                                    <option value="0" {% if country.status == 0 %} selected {% endif %}>Скрыта</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-file">Изображение (рекомендуется загрузить
                                с сайта по
                                <a href="https://icon-icons.com/ru/pack/Flat-Europe-Flag-Icons/266">ссылке</a>)
                            </label>
                            <div class="col-sm-10">
                                <img src="/upload/images/country/{{ country.file_alias }}" width="150" alt=""/>
                                <input type="file" name="file" placeholder="Название файла страны" id="input-file"
                                       class="form-control"/>
                            </div>

                            <input type="hidden" name="file_id" placeholder="" value="{{ country.file_id }}">
                            <input type="hidden" name="file_alias" placeholder="" value="{{ country.file_alias }}">
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

<script>
    $(document).ready(function () {

        $('#form-country').on('submit', function (e) {
            if (!$('#input-name').val()) {
                validAlert(e);
                return;
            }
            if (!$('#input-alpha2').val()) {
                validAlert(e);
                return;
            }
            if (!$('#input-alpha3').val()) {
                validAlert(e);
            }
        });

        const content = '<div class="alert alert-danger alert-dismissible">\n' +
            '            <i class="fa fa-exclamation-circle "></i> Заполните все необходимые поля, отмеченные звездочкой\n' +
            '            <button type="button" class="close" data-dismiss="alert">&times;</button>\n' +
            '        </div>';

        function validAlert(e) {
            e.preventDefault();
            $('.alert').remove();
            $('.content').prepend(content);
        }
    });
</script>