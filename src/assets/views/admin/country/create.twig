{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-option" data-toggle="tooltip" title="Сохранить" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="/admin/country" data-toggle="tooltip" title="Вернуться" class="btn btn-stile"><i class="fa fa-reply"></i></a>
        </div>
    <h1>Страны</h1>
    </section>
    <section class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Добавить страну</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-option" class="form-horizontal">
                    <fieldset>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-name">Название</label>
                            <div class="col-sm-10">
                                <input type="text" required name="name" placeholder="Название" id="input-name" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-alpha2">Код alpha 2</label>
                            <div class="col-sm-10">
                                <input type="text" required name="alpha2"  placeholder="Код alpha 2" id="input-alpha2" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-alpha3">Код alpha 3</label>
                            <div class="col-sm-10">
                                <input type="text" required name="alpha3"  placeholder="Код alpha 3" id="input-alpha3" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-status">Статус</label>
                            <div class="col-sm-10">
                                <select name="status" id="input-status" class="form-control">
                                    <option value="1">Отображается</option>
                                    <option value="0">Скрыта</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-currency_id">Валюта по умолчанию</label>
                            <div class="col-sm-10">
                                <select name="currency_id" id="input-currency_id" class="form-control" required>
                                    {% for currency in currencyList %}
                                        <option value="{{ currency.id }}">{{ currency.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-file">Изображение (рекомендуется загрузить с сайта по
                            <a href="https://icon-icons.com/ru/pack/Flat-Europe-Flag-Icons/266">ссылке</a>)
                            </label>
                            <div class="col-sm-10">
                                <input type="file" required name="file"  placeholder="Название файла страны" id="input-file" class="form-control" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}
