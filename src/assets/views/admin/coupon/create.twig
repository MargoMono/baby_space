{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-coupon" data-toggle="tooltip" title="Сохранить" class="btn btn-primary">
                <i class="fa fa-save"></i>
            </button>
            <a href="/admin/coupon" data-toggle="tooltip" title="Вернуться" class="btn btn-stile">
                <i class="fa fa-reply"></i>
            </a>
        </div>
        <h1>Купоны</h1>
    </section>
    <section class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Добавить купон</h3>
            </div>
            <div class="panel-body">
                <form action="" method="post" enctype="multipart/form-data" id="form-coupon" class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-code">Код</label>
                            <div class="col-sm-10">
                                <input type="text" minlength="1" maxlength="20" name="code" placeholder="Код"
                                       id="input-code" class="form-control"/>
                                <p class="prompt">от 1 до 20 символов</p>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="col-sm-2 control-label required" for="input-discount">% скидки</label>
                            <div class="col-sm-10">
                                <input type="number" min="1" max="99" name="discount" placeholder="% скидки"
                                       id="input-discount" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="col-sm-2 control-label required" for="input-quantity">Количество</label>
                            <div class="col-sm-10">
                                <input type="number" min="1" max="1000" name="quantity" placeholder="Количество"
                                       id="input-quantity" class="form-control"/>
                                <p class="prompt">от 1 до 1000</p>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="col-sm-2 control-label required" for="input-start_date">Дата начала
                                действия</label>
                            <div class="col-sm-10">
                                <input type="date" name="start_date" placeholder="Дата начала действия"
                                       id="input-start_date" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="col-sm-2 control-label required" for="input-end_date">Дата окончания
                                действия</label>
                            <div class="col-sm-10">
                                <input type="date" name="end_date" placeholder="Дата окончания действия"
                                       id="input-end_date" class="form-control"/>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

<script>
    $(document).ready(function () {

        $('#form-coupon').on('submit', function (e) {
            if (!$('#input-code').val()) {
                validAlert(e);
                return;
            }
            if (!$('#input-discount').val()) {
                validAlert(e);
                return;
            }
            if (!$('#input-quantity').val()) {
                validAlert(e);
                return;
            }
            if (!$('#input-start_date').val()) {
                validAlert(e);
                return;
            }

            if (!$('#input-end_date').val()) {
                validAlert(e);
            }
        });

        const content = '<div class="alert alert-danger alert-dismissible">\n' +
            '            <i class="fa fa-exclamation-circle "></i> Заполните все необходимые поля, отмеченные звездочкой\n' +
            '            <button type="button" class="close" data-dismiss="alert">&times;</button>\n' +
            '        </div>';

        function validAlert(e) {
            e.preventDefault();
            $('.alert').remove();
            $('.content').prepend(content);
        }
    });
</script>