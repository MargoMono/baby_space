{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <a href="/admin/currency" data-toggle="tooltip" title="Вернуться" class="btn btn-stile"><i class="fa fa-reply"></i></a>
        </div>
        <h1>
            Панель администратора
            <small>Удаление валюты</small>
        </h1>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="col-lg-12 correct">
                <div class="login-form">
                    <h4>Удалить валюту "{{ currency.name }}"</h4>

                    <p>Вы действительно хотите удалить эту валюту?</p>

                    <form action="/admin/currency/delete" method="post">
                        <input type="hidden" name="id" value="{{ currency.id }}">
                        <input type="submit" name="submit" class="btn btn-stile" value="Удалить"/>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}