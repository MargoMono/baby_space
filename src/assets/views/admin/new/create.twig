{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-new" data-toggle="tooltip" title="Сохранить" class="btn btn-primary">
                <i class="fa fa-save"></i>
            </button>
            <a href="/admin/new" data-toggle="tooltip" title="Вернуться" class="btn btn-stile">
                <i class="fa fa-reply"></i>
            </a>
        </div>
        <h1>Новости</h1>
    </section>
    <section class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i>Добавить новость
                </h3>
            </div>
            <div class="panel-body">
                <form action="" method="post" enctype="multipart/form-data" id="form-new" class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-name">Название</label>
                            <div class="col-sm-10">
                                <input type="text" minlength="1" maxlength="255" name="name" placeholder="Название" id="input-name" class="form-control" />
                                <p class="prompt">от 1 до 255 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-description">Текст</label>
                            <div class="col-sm-10">
                                <input type="text" minlength="1" maxlength="255" name="description"  placeholder="Текст" id="input-description" class="form-control" />
                                <p class="prompt">от 1 до 255 символов</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="input-file">Изображение</label>
                            <div class="col-sm-10">
                                <input type="file" name="file" id="input-file" class="form-control" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}

<script>
    $(document).ready(function () {

        $('#form-new').on('submit', function (e) {
            if (!$('#input-name').val()) {
                validAlert(e);
                return;
            }
            if (!$('#input-description').val()) {
                validAlert(e);
                return;
            }

            if (!$('#input-file').val()) {
                validAlert(e);
            }
        });

        const content = '<div class="alert alert-danger alert-dismissible">\n' +
            '            <i class="fa fa-exclamation-circle "></i> Заполните все необходимые поля, отмеченные звездочкой\n' +
            '            <button type="button" class="close" data-dismiss="alert">&times;</button>\n' +
            '        </div>';

        function validAlert(e) {
            e.preventDefault();
            $('.alert').remove();
            $('.content').prepend(content);
        }
    });
</script>
