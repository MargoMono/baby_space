{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-option" data-toggle="tooltip" title="Сохранить" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="/admin/type" data-toggle="tooltip" title="Вернуться" class="btn btn-stile"><i class="fa fa-reply"></i></a>
        </div>
        <h1>Виды товаров</h1>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="col-lg-12 correct">
                <div class="login-form">
                    <h4>Удалить вид товара "{{ type.name }}"</h4>

                    <p>Вы действительно хотите удалить этот вид товара?</p>

                    <form action="/admin/type/delete" method="post">
                        <input type="hidden" name="id" value="{{ type.id }}">
                        <input type="submit" name="submit" class="btn btn-stile" value="Удалить"/>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>


