{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Панель администратора
            <small>Добавить язык</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin/language/">Языки</a></li>
            <li class="active">Добавить язык</li>
        </ol>
    </section>

    <section class="content">
        {% if errors is not empty %}
            <div class="col-lg-12 mistake">
                <p>Ошибка:</p>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="col-lg-12 correct">
            <div class="login-form">
                <form action="#" enctype="multipart/form-data" method="post">

                    <p class="title-name">Название</p>
                    <input type="text" name="name" required>
                    <p class="required">*обязательное поле</p>

                    <p class="title-name">Код языка</p>
                    <input type="text" name="code" required>
                    <p class="required">*обязательное поле</p>

                    <p class="title-name">Название файла языка</p>
                    <input type="text" name="alias" required>
                    <p class="required">*обязательное поле</p>

                    <p class="title-name">Изображение (рекомендуется загрузить с сайта по <a href="https://icon-icons.com/ru/pack/Flat-Europe-Flag-Icons/266">ссылке</a>)</p>
                    <input type="file" name="file" required>
                    <p class="required">*обязательное поле</p>

                    <input type="submit" name="button" class="btn btn-default" value="Сохранить"/>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}
