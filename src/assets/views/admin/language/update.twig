{% include 'admin/includes/header.twig' %}

<div class="content-wrapper">
    <section class="content-header">
        <div class="pull-right">
            <button type="submit" form="form-option" data-toggle="tooltip" title="Сохранить" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="/admin/language" data-toggle="tooltip" title="Отменить" class="btn btn-default"><i class="fa fa-reply"></i></a>
        </div>
        <h1>Языки</h1>
    </section>
    <section class="content">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Обновить язык</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-option" class="form-horizontal">
                    <fieldset>
                        <input type="hidden" name="id" placeholder="" value="{{ language.id }}">
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-name">Название</label>
                            <div class="col-sm-10">
                                <input type="text" required name="name" value="{{ language.name }}" placeholder="Название" id="input-name" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-code">Код языка</label>
                            <div class="col-sm-10">
                                <input type="text" required name="code" value="{{ language.code }}" placeholder="Код языка" id="input-code" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-alias">Название файла языка</label>
                            <div class="col-sm-10">
                                <input type="text" required name="alias" value="{{ language.alias }}"  placeholder="Название файла языка" id="input-alias" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-file">Изображение (рекомендуется загрузить с сайта по
                                <a href="https://icon-icons.com/ru/pack/Flat-Europe-Flag-Icons/266">ссылке</a>)
                            </label>
                            <div class="col-sm-10">
                                <img src="/upload/images/language/{{ language.file_alias }}" width="150" alt=""/>
                                <input type="hidden" name="file_id" placeholder="" value="{{ language.file_id }}">
                                <input type="hidden" name="file_alias" placeholder="" value="{{ language.file_alias }}">
                                <input type="file" name="file" placeholder="Название файла языка" id="input-file" class="form-control" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>

{% include 'admin/includes/footer.twig' %}
